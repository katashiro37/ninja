    <%= form.date_select :start, id: :task_start %>
  </div>

  <div class="field">
    <%= form.label :deadline %>
    <%= form.date_select :deadline, id: :task_deadline %>
  </div>

  <div class="field">
    <%= form.label :status %>
    <%= form.check_box :status, id: :task_status %>
  </div>

  <div class="field">
    <%= form.label :user_id %>
    <%= form.text_field :user_id, value:current_user.id, id: :task_user_id %>
