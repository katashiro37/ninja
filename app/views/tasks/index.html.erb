<p id="notice"><%= notice %></p>


<div class="panel panel-default">
  <!-- Default panel contents -->

  <div class="panel-heading clearfix">
    <div class="pull-left">
  <h4>Tasks</h4></div>
    <div class="pull-right">
      <%= link_to new_task_path , class: "btn btn-success", remote: true  do %>
          <i class="glyphicon glyphicon-plus"></i>
          Add Task
      <% end %>
    </div>
  </div>


    <table class="table table-hover table-responsive">
      <thead>
        <tr>
          <th>Name</th>
          <th>Start</th>
          <th>Deadline</th>
          <th>Status</th>
          <th>User_id</th>
          <th>Action</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @tasks.each do |task| %>
          <tr class="table-hover">
            <td><%= task.name %></td>
            <td><%= task.start %></td>
            <td><%= task.deadline %></td>
            <!-- <td><%#= task.status %></td> -->
            <% if task.status == true %>
             <td>Active</td>
            <% else %>
             <td>InActive</td>
            <% end %>
            <td><%= task.user_id %></td>
            <td><%= link_to task, class: "btn btn-circle btn-info btn-xs", remote: true do %>
              <i class="glyphicon glyphicon-zoom-in"></i>
            <% end %>

            <%= link_to edit_task_path(task) , class: "btn btn-circle btn-default btn-xs", title: "Edit", remote: true do %>
              <i class="glyphicon glyphicon-edit"></i>
            <% end %>
            
            <%= link_to task, method: :delete, data: { confirm: 'Do you want to delete Task?' }, class: "btn btn-circle btn-danger btn-xs" do %>
              <i class="glyphicon glyphicon-remove"></i>
            <% end %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

</div>


<%= render 'layouts/form_modal' %>


