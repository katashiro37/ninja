<p id="notice"><%= notice %></p>

<center>
    <p>
      <h1>
      <%= @task.name %>
      </h1>  
    </p>

    <p>
      <% if @task.status == true %>
        <strong>Status:</strong> Active
      <% else %>
        <strong>Status:</strong> InActive
      <% end %>
    </p>


    <p>
      <strong>Start:</strong>
      <%= @task.start %>
    </p>

    <p>
      <strong>Due Date:</strong>
      <%= @task.deadline %>
    </p>

</center>





<%= link_to 'Edit', edit_task_path(@task) %>
<%= link_to 'Back', tasks_path %>
