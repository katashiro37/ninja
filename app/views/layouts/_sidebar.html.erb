<div class="list-group">
            <!-- <a href="#" class="list-group-item active">All Contact <span class="badge">10</span></a> -->
            <!--active is use to see if group_id found and pass as a variable "active"  -->
              <% active = params[:group_id] == nil || params[:group_id].empty? ? 'active' : '' %>
              <%= link_to contacts_path, class: "list-group-item #{active}" do %>
                All Contact <span class="badge"><%= Contact.count %> </span></a>
              <% end %>

              <% Group.all.each do |group| %>
                <!-- <a href="" class="list-group-item">Family <span class="badge">4</span></a> -->
                <%= link_to contacts_path(group_id: group.id), class: "list-group-item" do %>
                  <%= group.name %> <span class="badge"><%= group.contacts.count %> </span></a>
                <% end %>
              <% end %>
</div>
