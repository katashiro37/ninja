


<%= form_for(@contact, html: { multipart: true }, remote: local_assigns[:ajax_form]) do |f| %>

		<div class="card">
		  <br>
		  <%= image_tag @contact.avatar.url(:medium) %>
		  <h3><%= @contact.name %></h3>
		  <p class="title"><i class="fa fa-superpowers"></i>CEO & Founder</p>
		  <p><%= @contact.company %></p>
