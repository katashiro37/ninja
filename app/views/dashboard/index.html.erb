          <!-- FRIENDS -->
            <div class="panel panel-default">
              <div class="panel-heading" style="text-align: center;"><h2><i class='fa fa-address-book-o'></i> My Friends </h2></div>
              <div class="panel-body">
               <center>
                <div>
                  <div id="main-slider" class="owl-carousel owl-theme">
                    <% @contacts.each do |contact| %>
                      <div>
                        <br>
                        <%= image_tag contact.avatar.url(:medium) %>
                        <h4 align="center"><%= link_to contact.name, contact, remote: true%></h4>
                      </div>
                    <% end %>
                  </div>
                </div>
              </center>
              </div>
            </div>
          <!-- FRIENDS -->

              <div class="panel panel-default"> 
                <div class="panel-heading" style="text-align: center;"><h2><i class='fa fa-clock-o'></i> Timepiece</h2></div>
                <div class="panel-body">
                  <div class="col-sm-4">
                    <h5> Manila <%= timepiece('Singapore') %></h5>
                    <h5> London <%= timepiece('London') %></h5>
                    <h5> Hongkong <%= timepiece('Hongkong') %></h5>
                  </div>
                
                  <div class="col-sm-4">
                    <h5> Lisbon <%= timepiece('Lisbon') %></h5>
                    <h5> Moscow <%= timepiece('Moscow') %></h5>
                    <h5> Sydney <%= timepiece('Sydney') %></h5>
